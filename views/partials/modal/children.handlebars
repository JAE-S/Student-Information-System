<section id="myChildren" style="background-color: #FFFDF5"> 
  <div class="content ">
    <div class="grid-container">
      
      <table id="student-data" class="table-expand">
        <thead>
          <tr class="table-expand-row">
            <th style="width: 100px">Profile Photo</th>
            <th style="width: 100px">Children</th>
            <th style="width: 100px">Teacher</th>
            <th style="width: 100px">Teacher Contact</th>
            <th style="width: 100px">Update Profile</th>
          </tr>
        </thead>

        <tbody 
            data-deep-link="true" 
            data-update-history="true" 
            data-deep-link-smudge="true" 
            data-deep-link-smudge-delay="500" 
            data-tabs 
            id="my-children-tabs">
          {{#each studentData}}

          <tr class="table-expand-row" data-open-details>
            <td><img class="student-photo" src="/static-files/assets/images/stock_images/{{imageLink}}"></img></td>
            <td>{{firstName}} {{lastName}}</td>
            <td style="width: 100px">{{Teacher.firstName}} {{Teacher.lastName}}</td>
            <td>{{Teacher.email}}</td>
            <td><span class="expand-icon">Click to Update</span></td>
          </tr>

          <tr class="table-expand-row-content">
            <td colspan="8" class="table-expand-row-nested">
              <div class="grid-container">
                
                <ul class="tabs">
                  <li class="tabs-title title-tab-green"><a href="#panel-1{{id}}" aria-selected="true">General</a></li>
                  <li class="tabs-title title-tab-red"><a href="#panel-2{{id}}">Emergency Info</a></li>
                  <li class="tabs-title my-children-a title-tab-orange"><a href="#panel-3{{id}}">Allergies</a></li>
                  <li class="tabs-title my-children-n title-tab-purple"><a href="#panel-4{{id}}">Notes</a></li>
                </ul>

                <div class="tabs-content" data-tabs-content="my-children-tabs">
                  <!-- Section 1: General -->
                  <div class="tabs-panel " value="{{@index}}" id="panel-1{{id}}" style="background-color: #71960C">
                    <form id= "create-form">
                      <div class="form-row">
                        <div class="form-group">
                          <label for="studentFirstName-{{id}}"><p>First Name</p></label>
                          <input type="text" class="form-control" id="studentFirstName-{{id}}" value="{{firstName}}">
                        </div>
                      </div>

                      <div class="form-row">
                        <div class="form-group">
                          <label for="studentLastName-{{id}}"><p>Last Name</p></label>
                          <input type="text" class="form-control" id="studentLastName-{{id}}" value="{{lastName}}">
                        </div>
                      </div>

                      <div class="form-row">
                        <div class="form-group">
                          <label for="studentBirthDate-{{id}}"><p>Birthdate (Format: YYYY-MM-DD)</p></label>
                          <input type="text" class="form-control" id="studentBirthDate-{{id}}" value="{{birthDate}}">
                        </div>
                      </div>

                      <div class="form-row">
                        <div class="form-group">
                          <label for="studentGender-{{id}}"><p>Gender</p></label>
                          <input type="text" class="form-control" id="studentGender-{{id}}" value="{{gender}}">
                        </div>
                      </div>

                      <div class="form-row">
                        <div class="form-group">
                          <label for="studentEthnicity-{{id}}"><p>Ethnicity</p></label>
                          <input type="text" class="form-control" id="studentEthnicity-{{id}}" value="{{ethnicity}}">
                        </div>
                      </div>

                      <div class="form-row">
                        <div class="form-group">
                          <label for="studentLanguage-{{id}}"><p>What language do you speak at home?</p></label>
                          <input type="text" class="form-control" id="studentLanguage-{{id}}" value="{{primaryLanguage}}">
                        </div>
                      </div>

                      <div class="form-row">
                        <label for="exampleFileUpload-{{id}}" class="button">Upload File</label>
                        <input type="file" id="exampleFileUpload-{{id}}" class="show-for-sr">
                      </div>
                      
                      <a type="submit" id="add-user" class="button expanded updated-info panel-buttons">Update</a>
                      
                    </form>
                  </div>
                  <!-- Section 2: Emergency Info -->
                  <div class="tabs-panel" id="panel-2{{id}}" style="background-color: #CC5621">
                    <form>
                      <div class="form-row">
                        <div class="form-group">
                          <label for="emergencyContactName-{{id}}"><p>Emergency Contact Name</p></label>
                          <input type="text" class="form-control" id="emergencyContactName-{{id}}" value="{{emergencyContactName}}">
                        </div>
                      </div>

                      <div class="form-row">
                        <div class="form-group">
                          <label for="emergencyContactPhone-{{id}}"><p>Emergency Contact Phone Number</p></label>
                          <input type="text" class="form-control" id="emergencyContactPhone-{{id}}" value="{{emergencyContactPhone}}">
                        </div>
                      </div>

                      <div class="form-row">
                        <div class="form-group">
                          <label for="emergencyContactRelation-{{id}}"><p>Emergency Contact Relationship</p></label>
                          <input type="text" class="form-control" id="emergencyContactRelation-{{id}}" value="{{emergencyContactRelation}}">
                        </div>
                      </div>

                      <div class="form-row">
                        <div class="form-group">
                          <label for="doctorName-{{id}}"><p>Doctor's Name</p></label>
                          <input type="text" class="form-control" id="doctorName-{{id}}" value="{{doctorName}}">
                        </div>
                      </div>

                      <div class="form-row">
                        <div class="form-group">
                          <label for="doctorPhone-{{id}}"><p>Doctor's Phone Number</p></label>
                          <input type="text" class="form-control" id="doctorPhone-{{id}}" value="{{doctorPhone}}">
                        </div>
                      </div>

                      <div class="form-row">
                        <div class="form-group">
                          <label for="dentistName-{{id}}"><p>Dentist's Name</p></label>
                          <input type="text" class="form-control" id="dentistName-{{id}}" value="{{dentistName}}">
                        </div>
                      </div>

                      <div class="form-row">
                        <div class="form-group">
                          <label for="dentistPhone-{{id}}"><p>Dentist's Phone Number</p></label>
                          <input type="text" class="form-control" id="dentistPhone-{{id}}" value="{{dentistPhone}}">
                        </div>
                      </div>

                      <a type="submit" id="add-user" class="button expanded updated-info panel-buttons">Update</a>
                    </form>
                  </div>
                  <!-- Section 3: Allergies -->
                  <div class="tabs-panel" id="panel-3{{id}}" style="background-color: #F28808">
                    <form>
                      <div class="form-row">
                        <div class="form-group col-md-12">

                          <div class="grid-x grid-padding-x">
                            <fieldset>
                              <legend><p>Does Your child have any allergies?</p></legend>
                              <input type="checkbox" name="confirm-allergies" value="yes" id="confirm-allergies-yes-{{id}}" checked><label for="confirm-allergies-yes-{{id}}"><p>Yes</p></label>
                              <input type="checkbox" name="confirm-allergies" value="no" id="confirm-allergies-no-{{id}}"><label for="confirm-allergies-no-{{id}}"><p>No</p></label>
                            </fieldset>
                          </div>
                        
                          <label for="allergyDescription"><p>Allergies (if any)</p></label>
                          <input type="text" class="form-control" id="allergyDescription" value="{{allergyDescription}}">
                        </div>
                      </div>

                      <div class="grid-x grid-padding-x">
                        <fieldset>
                          <legend><p>If you answered yes, how severe are your child's allergies? (1 = severe 3 = mild)</p></legend>
                          <input type="radio" name="allergies" value="red" id="life-threatening-{{id}}"><label for="life-threatening"><p>life Threatening</p></label>
                          <input type="radio" name="allergies" value="orange" id="severe-{{id}}"><label for="severe-{{id}}"><p>Severe</p></label>
                          <input type="radio" name="allergies" value="yellow" id="moderate-{{id}}"><label for="moderate-{{id}}"><p>Moderate</p></label>
                        </fieldset>
                      </div>

                      <a type="submit" id="add-user" class="button expanded updated-info panel-buttons">Update</a>
                    </form>
                  </div>
                  <!-- Section 4: Notes --> 
                  <div class="tabs-panel" id="panel-4{{id}}" style="background-color: #63476A">
                    <form>
                      <div class="form-row">
                        <div class="form-group col-md-12">
                          <label for="parent-notes"></label>
                          <div class="large-12 columns">
                            <fieldset>
                              <legend><p>Additional notes for the teacher. </p></legend>
                              <textarea>{{notes}}</textarea>
                            </fieldset>
                          </div>
                        </div>
                      </div>
                      <a type="submit" id="add-user" class="button expanded updated-info panel-buttons">Update</a>
                    
                    </form>  
                  </div>
                  
                </div>
              </div>
            </td>
          </tr>
          {{!-- <p class="text-center">Thank you, your information has been updated!</p> --}}
          {{/each}}
        </tbody>
    
      </table> <!-- End of table -->
    </div>
  </div>
</section>